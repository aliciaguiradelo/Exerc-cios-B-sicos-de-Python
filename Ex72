print("______RESERVA ÔNIBUS PARA LAS VEGAS______")

#Inicializando variáveis
manha = []
tarde = []
noite = []
retornar = "S"
lotacao = 0

#MANHA
#Instanciando as linhas da matriz:
for i in range (0,10,1):
    manha.append([])

#Instanciando as colunas de array para cada linha de array:
for l in range(0,10,1):
    for c in range(0,4,1):
        manha[l].append("-----")

#TARDE
#Instanciando as linhas da matriz:
for i in range (0,10,1):
    tarde.append([])

#Instanciando as colunas de array para cada linha de array:
for l in range(0,10,1):
    for c in range(0,4,1):
        tarde[l].append("-----")

#NOITE
#Instanciando as linhas da matriz:
for i in range (0,10,1):
    noite.append([])

#Instanciando as colunas de array para cada linha de array:
for l in range(0,10,1):
    for c in range(0,4,1):
        noite[l].append("-----")

#Enquanto o usuário quiser realizar um novo cadastro, o programa volta a partir desse ponto. Entrada de dados do usuário:
while (retornar=="S"):
    nome=input("Digite seu nome: ")
    periodo=input("Digite o período desejado (manha/tarde/noite): ").upper()
    fileira=int(input("Digite a fileira desejada: "))-1
    cadeira=int(input("Digite a cadeira desejada: "))-1

    #Garantindo que os valores de fileira e cadeira sejam válidos:
    while (fileira<0) or (cadeira<0):
        fileira=int(input("Digite a fileira desejada: "))-1
        cadeira=int(input("Digite a cadeira desejada: "))-1
    
    if(periodo=="MANHA"):
        #Caso o lugar escolhido esteja ocupado, receberá aviso:
        while(manha[fileira][cadeira]!=("-----")):
            print=("Este lugar já está ocupado!")
            fileira=int(input("Digite a fileira desejada: "))-1
            cadeira=int(input("Digite a cadeira desejada: "))-1
        #Caso o lugar esteja vago, realizar reserva:
        manha[fileira][cadeira]=nome
        lotacao=lotacao+1
        print("Reserva realizada com sucesso! ")
        for i in range(0,10,1):
            print(manha[i])
        #Conferindo se ainda há vagas no ônibus:
        if(lotacao<41):
            retornar=input("Deseja realizar uma nova reserva? (S/N) ").upper()
        else:
            print("O ônibus está cheio! Bora! ")

    elif(periodo=="TARDE"):
        #Caso o lugar escolhido esteja ocupado, receberá aviso:
        while(tarde[fileira][cadeira]!=("-----")):
            print=("Este lugar já está ocupado!")
            fileira=int(input("Digite a fileira desejada: "))-1
            cadeira=int(input("Digite a cadeira desejada: "))-1
        #Caso o lugar esteja vago, realizar reserva:
        tarde[fileira][cadeira]=nome
        lotacao=lotacao+1
        print("Reserva realizada com sucesso! ")
        for i in range(0,10,1):
            print(tarde[i])
        #Conferindo se ainda há vagas no ônibus:
        if(lotacao<41):
            retornar=input("Deseja realizar uma nova reserva? (S/N) ").upper()
        else:
            print("O ônibus está cheio! Bora! ")

    else:
        #Caso o lugar escolhido esteja ocupado, receberá aviso:
        while(noite[fileira][cadeira]!=("-----")):
            print=("Este lugar já está ocupado!")
            fileira=int(input("Digite a fileira desejada: "))-1
            cadeira=int(input("Digite a cadeira desejada: "))-1
        #Caso o lugar esteja vago, realizar reserva:
        noite[fileira][cadeira]=nome
        lotacao=lotacao+1
        print("Reserva realizada com sucesso! ")
        for i in range(0,10,1):
            print(noite[i])
        #Conferindo se ainda há vagas no ônibus:
        if(lotacao<41):
            retornar=input("Deseja realizar uma nova reserva? (S/N) ").upper()
        else:
            print("O ônibus está cheio! Bora! ")
#Caso o usuário não quiser realizar uma nova reserva, mostrar o mapa das posições:
print("_______Mapa das reservas do ônibus_______")
print("_______MANHA_______")
for i in range(0,10,1):
    print(manha[i])
print("_______TARDE_______")
for i in range(0,10,1):
    print(tarde[i])
print("_______NOITE_______")
for i in range(0,10,1):
    print(noite[i])
print("Reservas concluídas com sucesso! ")