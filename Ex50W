a=int(input("Digite um numero:"))
b=int(input("Digite um numero:"))
while(a<0 or b<0):
    a=int(input("Digite um numero:"))
    b=int(input("Digite um numero:"))
if((a % 2==0) and (b % 2==0)):
    print(a,",",b)
elif(a%2!=0):
    print(a, "não é par")
    a=int(input("Digite A novamente:"))
elif(b%2!=0):
    print(b, "não é par")
    b=int(input("Digite A novamente:"))
else:
    print("Não são pares")
